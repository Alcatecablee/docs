{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2023"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@shared/schema": ["./shared/schema"]
    },
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["server/**/*", "shared/**/*"]
}
